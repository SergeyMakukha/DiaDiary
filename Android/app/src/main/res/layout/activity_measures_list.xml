<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smakukha.diadiary.MeasuresListActivity"
    android:orientation="vertical">

    <GridView
        android:id="@+id/gwMeasure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.38" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add measure" />

        <Button
            android:id="@+id/btnEditMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit measure" />

        <Button
            android:id="@+id/btnDeleteMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete measure" />
    </LinearLayout>

</LinearLayout>
