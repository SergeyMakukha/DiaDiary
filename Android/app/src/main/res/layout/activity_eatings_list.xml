<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smakukha.diadiary.EatingsListActivity">

    <GridView
        android:id="@+id/gwEatings"
        android:layout_width="match_parent"
        android:layout_height="680dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnAddEating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add eating"
            android:layout_weight="0.24" />

        <Button
            android:id="@+id/btnEdiEating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit eating" />

        <Button
            android:id="@+id/btnDeleteEating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete eating" />
    </LinearLayout>

</LinearLayout>
